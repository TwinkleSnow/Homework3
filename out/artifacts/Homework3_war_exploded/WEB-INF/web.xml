<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--  用户登录  -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.homework3.services.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
<!--  用户注册  -->
    <servlet>
        <servlet-name>RegisServlet</servlet-name>
        <servlet-class>com.homework3.services.ServletRegis</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisServlet</servlet-name>
        <url-pattern>/RegisServlet</url-pattern>
    </servlet-mapping>
<!--  用户信息删除  -->
    <servlet>
        <servlet-name>ServletDelete</servlet-name>
        <servlet-class>com.homework3.services.ServletDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDelete</servlet-name>
        <url-pattern>/ServletDelete</url-pattern>
    </servlet-mapping>
<!--  用户信息更新  -->
    <servlet>
        <servlet-name>ServletUpdate</servlet-name>
        <servlet-class>com.homework3.services.ServletUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUpdate</servlet-name>
        <url-pattern>/ServletUpdate</url-pattern>
    </servlet-mapping>
<!--  查找所有用户信息  -->
    <servlet>
        <servlet-name>SearchAll</servlet-name>
        <servlet-class>com.homework3.services.ServletSearchAll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchAll</servlet-name>
        <url-pattern>/SearchAll</url-pattern>
    </servlet-mapping>
</web-app>